<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="15dp"
    cardView:layout_goneMarginBottom="15dp"
    cardView:cardBackgroundColor="?attr/colorCardBackground"
    android:outlineAmbientShadowColor="?attr/colorShadow"
    android:outlineSpotShadowColor="?attr/colorShadow"
    cardView:contentPadding="15dp"
    cardView:cardElevation="4dp"
    cardView:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/marker_color"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/marker"
                android:backgroundTint="?attr/colorFirstMarker"
                android:layout_centerHorizontal="true"/>
            <com.vanniktech.emoji.EmojiTextView
                android:id="@+id/marker_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‹"
                android:layout_marginTop="7dp"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/marker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="Chintu dar dokan"
                android:textColor="?attr/colorTextTitle"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/marker_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:paddingVertical="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:textStyle="bold"
                        android:drawablePadding="5dp"
                        android:textColor="?attr/colorAccent"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_mode_edit_black_24dp"
                        android:backgroundTint="?attr/colorAccent"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/marker_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:paddingVertical="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:textStyle="bold"
                        android:drawablePadding="5dp"
                        android:textColor="?attr/colorDanger"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_delete_black_24dp"
                        android:backgroundTint="?attr/colorDanger"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/marker_locate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Locate"
                        android:paddingVertical="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:textStyle="bold"
                        android:drawablePadding="5dp"
                        android:textColor="?attr/colorTextTitle"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/ic_my_location_black_24dp"
                            android:backgroundTint="?attr/colorTextTitle"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>